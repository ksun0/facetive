<% provide(:title, @title) %>

  <div class="col-1">
    <h1>User Info</h1>
    <hr>
    <section class="user_info">
      <%= gravatar_for @user %>
      <h3><%= @user.name %></h3>
      <span><%= link_to "view my profile", @user %></span>
      <span><%= pluralize(@user.posts.count, "post") %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </div>
  <div class="col-2">
    <h1><%= @title %></h1>
    <hr>
    <% if @users.any? %>
      <div class="users">
        <%= render @users %>
      </div>
      <%= will_paginate %>
    <% end %>
  </div>
