<% provide(:title, @user.name) %>


    <div class="col-1">
      <h1>Profile</h1>
      <hr>
    <section class="user_info">

      <%= gravatar_for(@user) %>
      <h3><%= @user.name %></h3>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if logged_in? %>
  </div>
  <div class="col-2 truncated_posts">
      <% if @user.posts.any? %>
        <h1>Posts (<%= @user.posts.count %>)</h1>
        <hr>
        <div class="posts">
          <%= render @posts %>
        </div>
        <%= will_paginate @posts %>
      <% end %>
    </div>
